<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.anonyxhappie.dwarf.cookies.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cookies"
        android:src="@drawable/before_cookie"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_hungry"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hungry" />

    <Button
        android:id="@+id/b_eat"
        android:layout_margin="16dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"
        android:text="@string/eat_cookie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="eatCookie"/>

</LinearLayout>
